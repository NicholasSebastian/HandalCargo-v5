{
  "name": "handal-cargo",
  "version": "5.0.0",
  "description": "Handal Cargo proprietary ERP software.",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "npm-run-all -p dev:react electron:serve",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.js --mode development && npm run start:electron",
    "dev:react": "cross-env NODE_ENV=development webpack-dev-server --config webpack/react.webpack.js --mode development",
    "electron:serve": "wait-on http-get://localhost:4000/ && npm run dev:electron",
    "start:electron": "electron .",
    "build": "npm-run-all build:electron build:react",
    "build:run": "npm-run-all build start:electron",
    "build:electron": "webpack --config webpack/electron.webpack.js",
    "build:react": "webpack --config webpack/react.webpack.js",
    "package": "npm-run-all build package:dist",
    "package:dist": "electron-builder --dir"
  },
  "keywords": [],
  "author": "Nicholas Sebastian + Jacky Richie Bahary",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/electron-prompt": "^1.6.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-router-dom": "^5.1.7",
    "@types/sjcl": "^1.0.29",
    "@types/styled-components": "^5.1.7",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.1",
    "electron": "^8.2.2",
    "electron-builder": "^22.7.0",
    "electron-devtools-installer": "^3.1.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "style-loader": "^2.0.0",
    "typescript": "^3.9.5",
    "wait-on": "^5.0.1",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "@ant-design/icons": "^4.4.0",
    "antd": "^4.11.1",
    "mariadb": "^2.5.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "sjcl": "^1.0.8",
    "styled-components": "^5.2.1",
    "utility-types": "^3.10.0",
    "uuid": "^8.3.2"
  },
  "build": {
    "appId": "com.handalcargo.erp",
    "productName": "Handal Cargo ERP",
    "buildVersion": "1.0",
    "copyright": "Copyright Â© 2021 Handal Cargo",
    "win": {
      "target": "nsis",
      "icon": "icon.png",
      "legalTrademarks": "Handal Cargo"
    },
    "directories": {
      "output": "packages"
    },
    "files": [
      "package.json",
      "dist/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
